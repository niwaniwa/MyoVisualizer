<Window x:Class="MyoVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyoVisualizer"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" /> 
        </Grid.RowDefinitions>

        <!-- Start and End buttons -->
        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="StartButton" Content="Start" Width="100" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="EndButton" Content="End" Width="100" Margin="5" Click="EndButton_Click"/>
        </StackPanel>

        <!-- Area for waveform display -->
        <oxy:PlotView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" x:Name="Plot" Margin="5"/>
        
        <oxy:PlotView Grid.Column="2" Grid.Row="1" x:Name="Plot2" Margin="5"/> <!-- 新しいPlotViewの追加 -->
        
        
    </Grid>
</Window>
